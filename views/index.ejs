<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="output.css">
    <title>Chess Game</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #1a1a1a;
            color: #f0f0f0;
         
        }

        .chessboard {
            display: grid;
            grid-template-columns: repeat(8, 1fr);
            grid-template-rows: repeat(8, 1fr);
            width: 100%;
            max-width: 400px;
            height: 400px;
            border: 4px solid #333;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.7);
            transition: transform 0.4s ease;
            transform-origin: center;
        }

        .square {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            cursor: pointer;
        }

        .square.light {
            background-color: #f5d6ac;
        }

        .square.dark {
            background-color: #b58863;
        }

        .piece.white {
            color: white;
            text-shadow: 0px 0px 5px rgba(255, 255, 255, 0.8);
        }

        .piece.black {
            color: black;
            text-shadow: 0px 0px 5px rgba(0, 0, 0, 0.8);
        }

        .piece {
            font-size: 36px;
            transition: transform 0.2s ease-in-out, color 0.2s ease-in-out;
        }

        .dragging {
            opacity: 0.6;
        }

        .flipped {
            transform: rotate(180deg);
        }

        .flipped .piece {
            transform: rotate(180deg);
        }

        .turn-display {
            margin-top: 20px;
            font-size: 20px;
            text-align: center;
            color: #00ffb3;
            background-color: rgba(0, 0, 0, 0.6);
            padding: 10px 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
            max-width: 200px;
        }

        .status-display {
            margin-top: 10px;
            font-size: 18px;
            text-align: center;
            color: red;
            background-color: rgba(255, 0, 0, 0.2);
            padding: 10px;
            border-radius: 8px;
            max-width: 200px;
        }

        .waiting-message {
            color: #fff;
            font-size: 24px;
            text-align: center;
            /* margin-top: 20px; */
            display: none;
        }

        .waiting-message.active {
            display: block;
        }

        .hidden {
            display: none;
        }

        .visible {
            display: block;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            /* paddpx; */
            background: linear-gradient(145deg, #2e2e2e, #1a1a1a);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="color: white;">♕♔Chess♔♕</h1>
        <div class="chessboard w-96 h-96"></div>
        <div class="turn-display">
            It's White's turn!
        </div>
        <div class="status-display"></div>
        <div class="waiting-message">
            Waiting for opponent to join...
        </div>
    </div>

    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js" crossorigin="anonymous"></script>
    <script src="/js/chessgame.js"></script>
</body>
</html>
